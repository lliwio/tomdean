---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="flex flex-wrap sm:justify-start sm:flex-nowrap z-50 w-full text-sm py-8">
  <nav class="max-w-[85rem] w-full mx-auto px-4 sm:flex sm:items-center sm:justify-between" aria-label="Global">
    <a class="flex-none text-xl uppercase font-extrabold" href="#">Tom Dean</a>
    <div class="flex flex-row text-lg items-center gap-5 mt-5 sm:justify-end sm:mt-0 sm:ps-5">
      <a class={currentPath === "" ? "active" : ""} href="/" aria-current="page">Home</a>
      <a class={currentPath === "about" ? "active" : ""} href="/about">About</a>
      <a class="font-medium text-gray-600 hover:text-gray-400 dark:text-gray-400 dark:hover:text-gray-500 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="#">Work</a>
      <a class="font-medium text-gray-600 hover:text-gray-400 dark:text-gray-400 dark:hover:text-gray-500 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="#">Blog</a>
    </div>
  </nav>
</header>